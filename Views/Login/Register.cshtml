@{
	string msg = ViewData["msg"] as string;
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
	 style="background:url(/img/login/auth-bg.jpg) no-repeat center center;">
	<div class="auth-box row text-center">
		<div class="col-lg-7 col-md-5 modal-bg-img" style="background: linear-gradient(to right, skyblue, orange);">
		</div>
		<div class="col-lg-5 col-md-7 bg-white">
			<div class="p-3">
				<img src="/img/login/icon.png" alt="wrapkit">
				<h2 class="mt-3 text-center">회원가입</h2>
				@if (string.IsNullOrWhiteSpace(msg) == false)
				{
					<div class="alert alert-danger">@msg</div>
					
				}
				<form class="mt-4" id="form1" method="post" action="/login/register">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="user_name" class="form-control" type="text" placeholder="사용자 이름">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="email" class="form-control" type="email" placeholder="이메일">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="password" class="form-control" type="password" placeholder="비밀번호">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="password2" class="form-control" type="password" placeholder="비밀번호 확인">
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<button type="submit" class="btn w-100 btn-dark">회원가입</button>
						</div>
						<div class="col-lg-12 text-center mt-5">
							이미 가입한 아이디가 있다면? <a href="/login" class="text-danger">로그인</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
