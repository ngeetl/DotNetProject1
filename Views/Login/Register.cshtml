@{
	string msg = ViewData["msg"] as string;
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
	 style="background:url(/img/login/auth-bg.jpg) no-repeat center center;">
	<div class="auth-box row text-center">
		<div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(/img/login/3.jpg);">
		</div>
		<div class="col-lg-5 col-md-7 bg-white">
			<div class="p-3">
				<img src="/img/login/icon.png" alt="wrapkit">
				<h2 class="mt-3 text-center">Sign Up for Free</h2>
				@if (string.IsNullOrWhiteSpace(msg) == false)
				{
					<div class="alert alert-danger">@msg</div>
					
				}
				<form class="mt-4" id="form1" method="post" action="/login/register">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="user_name" class="form-control" type="text" placeholder="your name">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="email" class="form-control" type="email" placeholder="email address">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="password" class="form-control" type="password" placeholder="password">
							</div>
						</div>
						<div class="col-lg-12">
							<div class="form-group mb-3">
								<input name="password2" class="form-control" type="password" placeholder="password-check">
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<button type="submit" class="btn w-100 btn-dark">Sign Up</button>
						</div>
						<div class="col-lg-12 text-center mt-5">
							Already have an account? <a href="/login" class="text-danger">Sign In</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
