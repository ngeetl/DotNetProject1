<script>
	$("#callApi").click(function () {
		$.ajax({
			type: "get",
			url: "http://localhost:5285/Topic",
			datatype: "json",
			success: function (data) {
				console.log(data);
				getTopics(data);
			},
			error: function (xhr) {
				console.log("실패: ", xhr.responseJson.message);
			}
		});
	});

	function getTopics(data) {
		const row = $("#row");
		row.empty(); // 테이블 초기화

		data.forEach(function (item) {
			const itemDiv = `
						<div id="randomBox" class="col-md-6 col-lg-3 col-xlg-3" href="/home/boardwrite">
							<div class="card card-hover">
								<div class="py-8 p-2 bg-success text-center">
									<h2 id="randomBoxTxt" class="font-light text-white">${item}</h2>
								</div>
							</div>
						</div>`;

			row.append(itemDiv);
		})
	}
	
</script>
